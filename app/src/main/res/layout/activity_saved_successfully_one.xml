<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedSuccessfullyOne">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieVideo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="done.json"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieVideo1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/lottieVideo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="new_done.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ok"
        android:layout_below="@+id/lottieVideo1"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:gravity="center"
        android:text="Successfully \nSaved"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ok"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/blue_button"
        android:gravity="center"
        android:text="Ok"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>